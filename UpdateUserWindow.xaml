<Window x:Class="WPF.UpdateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        mc:Ignorable="d"
        Title="UpdateUserWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-6">
        <Label Content="ФИО:" HorizontalAlignment="Left" Margin="30,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="fullNameTextBox" HorizontalAlignment="Left" Margin="130,30,0,0" VerticalAlignment="Top" Width="200"/>
        <Label Content="Дата рождения:" HorizontalAlignment="Left" Margin="30,70,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="birthDateTextBox" HorizontalAlignment="Left" Margin="130,70,0,0" VerticalAlignment="Top" Width="200"/>
        <Button Content="Обновить" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Width="75" Click="UpdateButton_Click"/>
    </Grid>
</Window>
