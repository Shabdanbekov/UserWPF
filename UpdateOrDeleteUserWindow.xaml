<Window x:Class="WPF.UpdateOrDeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UpdateOrDeleteUserWindow" Height="100" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="74"/>
            <ColumnDefinition Width="*" MinWidth="74"/>
        </Grid.ColumnDefinitions>

        <Button Content="Обновить" Click="UpdateButton_Click" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="0"/>
        <Button Content="Удалить" Click="DeleteButton_Click" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1"/>
    </Grid>
</Window>
