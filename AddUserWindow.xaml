<Window x:Class="WPF.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddUserWindow" Height="200" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="ФИО:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox x:Name="fullNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Дата рождения:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,0,0"/>
        <DatePicker x:Name="birthDatePicker" Grid.Row="1" Grid.Column="1" Margin="5" />



        <Button Content="Добавить" Grid.Row="2" Grid.Column="1" Margin="5,10,5,0" Click="AddButton_Click" />
    </Grid>
</Window>
